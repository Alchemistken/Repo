<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#F07470">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:elevation="60dp"
        android:id="@+id/view2"
        app:cardCornerRadius="100dp"
        android:layout_marginLeft="60dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            android:src="@drawable/back"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2">
        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Sign in"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/login"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:text="Log in"
            android:layout_toRightOf="@+id/signin"
            android:textSize="30sp"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"/>
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:id="@+id/twitter"
            android:src="@drawable/twitter"
           android:scaleType="fitXY"
            android:layout_below="@+id/signin"
            android:layout_marginRight="25dp"
            />
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:id="@+id/facebook"
            android:src="@drawable/facebook"
            android:scaleType="fitXY"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/twitter"
            android:layout_below="@+id/signin"
            />
        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:id="@+id/gmail"
            android:src="@drawable/gmail"
            android:scaleType="fitXY"
            android:layout_toRightOf="@id/facebook"
            android:layout_below="@id/login"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/or"
                android:layout_marginLeft="160dp"
                android:textSize="30sp"
                android:text="or"/>
            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username / email address"
                android:layout_below="@+id/or"
                android:paddingLeft="40dp"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/thi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="10sp"
                android:layout_below="@id/user"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/ediuser"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:hint="username"
                android:textSize="20sp"
                android:layout_below="@+id/thi"
                android:paddingLeft="140dp"
                />
            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password"
                android:textSize="10sp"
                android:layout_below="@id/ediuser"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/edipass"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:hint="password"
                android:paddingLeft="140dp"
                android:layout_below="@+id/pass"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textSize="28sp"
                android:layout_below="@+id/edipass"/>

            <Button
                android:id="@+id/but"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:textSize="30sp"
                android:layout_below="@+id/check"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="90dp"
                android:layout_below="@+id/but"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>




